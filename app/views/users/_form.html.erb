<% if @user.errors.any? %>
  <h2>The following errors prevented the signup</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>

  <p>
    <%= f.label :username %><br/>
    <%= f.text_field :username%>
  </p>

  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email%>
  </p>

  <p>
    <%= f.label :password %><br/>
    <%= f.text_field :password %>
  </p>


  <p>
    <%= f.submit(@user.new_record? ? "Signup" : "Update Account" )%>
  </p>

<% end %>